        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0208"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="327,108,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding AddCommand}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="327,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                  Text="{Binding NumberA , Mode=TwoWay}" />

    </Grid>
</Window>
